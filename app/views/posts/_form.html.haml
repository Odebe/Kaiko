= form_with(model: post, local: true) do |form|
  - if @errors.any?
    #error_explanation
      %h2
        = pluralize(@errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @errors.each do |message|
          %li= message
  .actions
    .ui.form
      .field
        = form.label :title
        = form.text_field :title
      .field
        = form.label :text
        = form.text_area :text
      .field
        = form.select 'post_type', options_for_select(Post.post_types.keys)
      .field
        = form.select 'project_id', options_for_select(Project.all.map { |pr| [pr.title, pr.id.to_i] })
      .field
        = form.submit class: "ui button"