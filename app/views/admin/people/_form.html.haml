= simple_form_for [:admin, person], html: { class: 'ui form', fluid: true } do |f|
  .field
    = f.error :base
  .field
    = f.input :name, label: 'Имя'
  .field
    = f.input :situations, label: 'Должность'
  .field
    = f.input :avatar, as: :file, label: 'Аватар'
    = f.input :avatar_cache, as: :hidden
  .field
    = f.button :submit, class: 'ui button'