.row
  %h1.ui.huge.header Список новостей
  = link_to 'Добавить новость', new_admin_post_path
  %table.ui.single.line.table
    %thead
      %tr
        %th.eight.wide Название
        %th.one.wide Автор
        %th.one.wide Дата
        %th.two.wide Операции
    %tbody
      - @posts.each do |post|
        %tr
          %td= link_to post.title, admin_post_path(post.id), class: 'post_title'
          %td Admin
          %td= post.created_at.strftime("%d/%m/%Y в %I:%M%p")
          %td 
            Опубликовать
            | 
            =link_to 'Изменить', edit_admin_post_path(post)
            | 
            = link_to 'Удалить', [:admin, post], method: :delete, data: { confirm: 'Are you sure?' } 
  = paginate @posts