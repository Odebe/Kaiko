.ui.grid
  .row
    %h1.ui.huge.header @user.email
  .row
    =link_to 'Юзер!', user_admin_user_path(@user), method: :post, data: { confirm: 'Are you sure?' }
    |
    =link_to 'Оператор!', operator_admin_user_path(@user), method: :post, data: { confirm: 'Are you sure?' }
    |
    =link_to 'Админ!', admin_admin_user_path(@user), method: :post, data: { confirm: 'Are you sure?' }
    |
    =link_to 'Показать на сайте', @user
    |
    =link_to 'Изменить', edit_admin_user_path(@user)
    |
    =link_to 'В бан', '', method: :delete, data: { confirm: 'Are you sure?' }
  .row
    .two.column.doubling.ui.grid
      .seven.wide.column
        = image_tag 'https://semantic-ui.com/images/wireframe/image.png', class: %w[ui image], height: 250, width: 250
      .eight.wide.column
        .row
          %h3.ui.header Почта
        .row
          = @user.email
        .row
          %h3.ui.header Имя
        .row
          = @user.email
        .row
          %h3.ui.header Роль
        .row
          = @user.role
